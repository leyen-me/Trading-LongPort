bb_ma_type          = input.string("SMA", "ç§»åŠ¨å¹³å‡çº¿ç±»å‹", options = ["SMA", "EMA", "SMMA (RMA)", "WMA", "VWMA"], group=bb_group)
bb_length           = input.int(20, "å¸ƒæ—å¸¦å‘¨æœŸ", minval=1, group=bb_group)
