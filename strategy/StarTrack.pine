// æˆäº¤é‡æ¿€å¢æ”¾é‡å›æ’¤ç»˜åˆ¶
plotshape(volspir_bearvol, title='çœ‹è·Œæˆäº¤é‡æ¿€å¢', style=shape.triangledown, location=location.abovebar, color=color.new(red_color, 0), size=size.tiny)
plotshape(volspir_bullvol, title='çœ‹æ¶¨æˆäº¤é‡æ¿€å¢', style=shape.triangleup,   location=location.belowbar, color=color.new(green_color,  0), size=size.tiny)
